<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lightBlack</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_color_sound_foreground
        </item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ColorSound</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lightBlack</item>
        <item name="android:navigationBarColor">@color/lightBlack</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>